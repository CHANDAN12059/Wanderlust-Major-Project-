<% layout("/layout/boilerplate.ejs")%>
<br>


<div class="toggle-switch  ms-auto">
    <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" >
        <label class="form-check-label" for="flexSwitchCheckChecked">Display total after taxes</label>
      </div>
</div>


<br>
<body>
    


<div class="row row-cols-lg-3 row row-cols-md-2 row row-cols-sm-1">
    <%for(list of allListing){%>
        <a href="/listing/<%=list._id%>" class="links">
            <div class="card col listing-card">
                <img src="<%=list.image.url%>" class="card-img-top" alt="No image" style="height: 20rem">
                <!-- <div class="card-img-overlay"></div> -->
                <div class="card-body">
                 <p><b><%=list.title%></b></p>
                 <p><%=list.price.toLocaleString("en-IN")%>/night<i class="tax-info"> &nbsp &nbsp +18% GST</i></p>
                </div>
              </div>
        </a>
   
      
        <%}%>
</div>
</body>






<script>
let taxBtn=document.querySelector("#flexSwitchCheckChecked");
taxBtn.addEventListener("click",()=>{
    let taxInfo=document.getElementsByClassName("tax-info");
    for(tax of taxInfo){
        if(tax.style.display!="inline"){
        tax.style.display="inline";}
        else{
            tax.style.display="none";
        }
    }
  
})



</script>