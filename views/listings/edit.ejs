<% layout("/layout/boilerplate.ejs")%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h1>Edit Listing</h1>
            <form method="POST" action="/listing/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="exampleFormControlInput8" class="form-label">Title</label>
                    <input type="text" class="form-control" id="exampleFormControlInput8" value="<%=listing.title%>" name="title" required />
                    <div class="invalid-feedback">Enter valid title</div>
                </div>

                <div class="mb-3">
                    <label for="exampleFormControlTextarea9" class="form-label">Description</label>
                    <textarea class="form-control" id="exampleFormControlTextarea9" required name="description" rows="3"><%=listing.description%></textarea>
                    <div class="invalid-feedback">valid description required</div>
                </div>

                <div class="mb-3">
                    Orignal Image<br>
       <img src="<%=listing.image.url%>">
                </div>

                <div class="mb-3">
                    <label for="exampleFormControlInput10" class="form-label">Upload New Image</label>
                    <input type="file" class="form-control" id="exampleFormControlInput10"  name="image"  />
                </div>

       <div class="row row-cols-md-2 row-cols-sm-1 row-cols-1">

        <div class="mb-3 col">
            <label for="exampleFormControlInput11" class="form-label">Price</label>
            <input type="number" class="form-control" id="exampleFormControlInput11" value="<%=listing.price%>" required name="price" min="0"/>
            <div class="invalid-feedback">Enter valid price</div>
        </div>

        <div class="mb-3 col">
            <label for="exampleFormControlInput12" class="form-label">Country</label>
            <input type="text" class="form-control" id="exampleFormControlInput12" value="<%=listing.country%>" name="country" required />
            <div class="invalid-feedback">Enter valid country</div>
        </div>

       </div>

                <div class="mb-3">
                    <label for="exampleFormControlInput13" class="form-label">Location</label>
                    <input type="text" class="form-control" id="exampleFormControlInput13" value="<%=listing.location%>" name="location" required/>
                    <div class="invalid-feedback">Enter valid location</div>
                </div>

                <button class="btn btn-outline-primary">SUBMIT</button>
          
            </form>
        </div>
    </div>
    <br>
</body>
